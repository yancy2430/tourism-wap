<!--notice.ui-->
<template>
  <ui-page>
    <ui-nav-bar slot="nav-bar" class="nav_bar">
      <ui-row height="46">
        <ui-col vertical-align="middle" align="left" space-left="10"  width="50" bindtap="navigateBack">
          <ui-icon type="arrow-left" size="16" color="#fff"></ui-icon>
        </ui-col>
        <ui-col vertical-align="middle" align="center">
          <ui-view class="nav_title">新增地址</ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="center" width="50" >
          <ui-icon type="delete" size="16" color="#fff"></ui-icon>
        </ui-col>
      </ui-row>
    </ui-nav-bar>
    <ui-view class="address_content">
      <ui-row>
        <ui-col vertical-align="top" align="center" width="80">
          <ui-view class="name name1">联系人</ui-view>
        </ui-col>
        <ui-col space-right="10">
          <ui-input placeholder="TOUCH UI"></ui-input>
          <ui-tags 
          data="{{ tag1 }}" 
          bindchange="singleTap1" >
          </ui-tags>
        </ui-col>
      </ui-row>
      <ui-row height="50">
        <ui-col vertical-align="middle" align="center" width="80">
          <ui-view class="name">电话</ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="center">
          <ui-input type="string" placeholder="手机号码" value="{{phoneNumber}}"></ui-input>
          <!-- <ui-input class="input" type="string" name="input" value="{{phoneNumber}}"></ui-input> -->
        </ui-col>
        <ui-col width="100" vertical-align="middle" align="right" space-right="10" bindtap="pick">
          <ui-view class="address_book">
            <ui-icon type="plus" size="16" color="#2281FF"></ui-icon>通讯录
          </ui-view>
        </ui-col>
      </ui-row>
      <ui-row height="50" bindtap="chooseLocation">
        <ui-col vertical-align="middle" align="center" width="80">
          <ui-view class="name">地址</ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="left">
          <ui-view class="map_address">{{hasLocation ? locationAddress : '选择收货地址'}}</ui-view>
          <!-- <ui-view class="map_address">1205</ui-view>  -->
          <!-- <ui-input placeholder="选择收货地址"></ui-input> -->
        </ui-col>
        <ui-col width="100" vertical-align="middle" align="right" space-right="10">
          <ui-view class="address_book">
            <ui-icon type="arrow-right" size="16" color="#C2C2C2"></ui-icon>
          </ui-view>
        </ui-col>
      </ui-row>
      <ui-row height="50">
        <ui-col vertical-align="middle" align="center" width="80">
          <ui-view class="name">门牌号</ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="left" space-right="10">
          <ui-input placeholder="例：5号楼230室"></ui-input>
        </ui-col>
      </ui-row>
      <ui-row height="50" class="last_row">
        <ui-col vertical-align="middle" align="center" width="80">
          <ui-view class="name">标签</ui-view>
        </ui-col>
        <ui-col vertical-align="middle" align="left" space-right="10">
          <ui-tags 
          data="{{ tag2 }}" 
          bindchange="singleTap2">
          </ui-tags>
        </ui-col>
      </ui-row>
    </ui-view>
    <ui-view class="sample_content">
      <ui-button class="sure" bindtap="navigateBack">确定</ui-button>
    </ui-view>

    
  </ui-page>
</template>


<script>
// notice.js
export default {
  config: {
    "navigationBarTitleText": "文本"
  },
  data () {
    return {
      sexClass: 'active',
      sexClass2: '',
      tag1: [{
        text: '先生',
        tagClass: 'tag-before',
        tagSelectedClass: 'select-class',
        checked: true
      }, {
        text: '女士',
        tagClass: 'tag-before',
        tagSelectedClass: 'select-class',
        checked: false
      }],
      tag2: [{
        text: '家',
        tagClass: 'tag-before',
        tagSelectedClass: 'select-class',
        checked: true
      }, {
        text: '公司',
        tagClass: 'tag-before',
        tagSelectedClass: 'select-class',
        checked: false
      }, {
        text: '学校',
        tagClass: 'tag-before',
        tagSelectedClass: 'select-class',
        checked: false
      }],
      phoneNumber: '',
      hasLocation: false,
      locationAddress: ''
    }
  },
  methods: {
    navigateBack () {
      ui.navigateBack()
    },
    singleTap1 (opt) {
      this.tag1.forEach((item, index) => {
        item.checked = (index === opt)
      })
    },
    singleTap2 (opt) {
      this.tag2.forEach((item, index) => {
        item.checked = (index === opt)
      })
    },
    pick () {
      ui.pickPhoneNumber({
        success: ({ phoneNumber }) => {
          this.phoneNumber = phoneNumber
        }
      })
    },
    chooseLocation: function () {
      var that = this
      ui.chooseLocation({
        backgroundColor: '#fff',
        color:'#000',
        success: function (res) {
          that.hasLocation = true
          that.locationAddress = res.address
        },
        fail: function (res) {
        }
      })
    }

  }
}

</script>

<style lang="less">
  // notice.less
.nav_bar {
  background: linear-gradient(to right, #1F97FE, #126DFE);
  .nav_title{
    color: #fff;
  }
}

.address_content{
  padding: 10px 0 0px 10px;
  background: #fff;
  .ui-row{
    .mix-1px(0, 0, 1, 0, #ccc);
    &.last_row{
      border: 0;
    }
    .name{
      font-size: 14px;
      font-weight: 600;
      color: #050505;
      &.name1{
        padding-top: 10px;
      }
    }
    .ui-input{
      border: 0;
      padding: 0;
      background: transparent;
    }
    .address_book{
      color: #2281FF;
      font-size: 14px;
    }
    .map_address{
      font-size: #c2c2c2;
      font-size: 14px;
    }
    .tag-before{
      border-radius: 5px;
      border: 1px solid #F5F5F5;
      width: 65px;
      text-align: center;
      line-height: 25px;
      margin-top: 5px;
    }
    .select-class{
        border-radius: 5px;
        width: 65px;
        text-align: center;
        line-height: 25px;
        margin-top: 5px;
        border: 1px solid #B9DAFE;
        background: #F8FBFF;
        color: #3785E4;
      }
    
  }
}
.sure{
  background-color: #36D34F;
  color: #fff;
  border: 0;
}
</style>